	<h2>12 alineamiento</h2>
	<h3>Usando atributos align y valign</h3>
	<table style="height: 120px;" cellspacing="0px">
		<tr>
			<td align="right">Derecha</td>
			<td align="center">Centro</td>
			<td align="left">Izquierda</td>
		</tr>
		<tr>
			<td valign="top">Arriba</td>
			<td align="left">centro</td>
			<td valign="bottom">Abajo</td>
		</tr>
		<tr>
			<td valign="top" align="right">Arriba derecha</td>
			<td align="center">centro</td>
			<td valign="bottom" align="left">Abajo izquierda</td>
		</tr>
	</table>
	<h3>Usando estilos text-align y vertical-align</h3>
	<table style="height: 120px;" cellspacing="0px">
		<tr>
			<td style="text-align: right;">Derecha</td>
			<td style="text-align: center;">Centro</td>
			<td style="text-align: left;">Izquierda</td>
		</tr>
		<tr>
			<td style="vertical-align: top;">Arriba</td>
			<td style="vertical-align: center;">centro</td>
			<td style="vertical-align: bottom;">Abajo</td>
		</tr>
		<tr>
			<td style="text-align: right; vertical-align: top;">Arriba derecha</td>
			<td style="text-align: center;">centro</td>
			<td style="text-align: left; vertical-align: bottom;">Abajo izquierda</td>
		</tr>
	</table>
